<Window x:Class="GorselVize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GorselVize"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="CadetBlue">        
       
        <DataGrid MinColumnWidth="75" MinRowHeight="32"  Name="bilgi" Height="60" Margin="48,24,58,0" Grid.Column="0" AutoGenerateColumns="False" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*"/>
                <DataGridTextColumn Header="Soyad" Binding="{Binding Soyad}" Width="*"/>
                <DataGridTextColumn Header="Öğrenci No" Binding="{Binding OgrenciNo}" Width="*"/>
                <DataGridTextColumn Header="Bölüm" Binding="{Binding Bolum}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnUygulama" Content="Uygulama" FontSize="25" FontFamily="Century" Background="AntiqueWhite" Margin="148,148,168,219" Click="btnUygulama_Click" />
    </Grid>
</Window>
